{
    "scripts": {
        "frontend:install": "cd client && npm install",
        "backend:install": "cd server && npm install",
        "frontend:build": "cd client && npm run build",
        "backend:build": "cd server && npm run build",
        "start:server": "cd server && npm run dev",
        "start:frontend": "cd client && npm run start",
        "start:all": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
        "frontend:unit-test": "cd client && npm run test",
        "frontend:e2e-test": "cd client && npm run e2e",
        "backend:test": "cd server && npm run test",
        "frontend:deploy": "cd client && npm run deploy",
        "backend:deploy": "cd server && npm run deploy"
    },
    "devDependencies": {
        "concurrently": "^7.0.0"
    }
}
