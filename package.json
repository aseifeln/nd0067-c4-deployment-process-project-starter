{
    "scripts": {
        "frontend:install": "cd udagram-frontend && npm install",
        "backend:install": "cd udagram-api && npm install",
        "frontend:build": "cd udagram-frontend && npm run build",
        "backend:build": "cd udagram-api && npm run build",
        "start:server": "cd udagram-api && npm run dev",
        "start:frontend": "cd udagram-frontend && npm run start",
        "start:all": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
        "frontend:unit-test": "cd udagram-frontend && npm run test",
        "frontend:e2e-test": "cd udagram-frontend && npm run e2e",
        "frontend:deploy": "cd udagram-frontend && npm run deploy",
        "backend:deploy": "cd udagram-api && npm run deploy"
    },
    "devDependencies": {
        "concurrently": "^7.0.0"
    }
}
